    <title>Friends</title>
  </head>
  <body style="height: 100%; background-color: rgb(25, 185, 118);   font-family: 'Montserrat', sans-serif;" class="d-flex justify-content-center align-items-center">
<main style="width: 100%;color:white;">
  <a style="text-decoration:none;color:white;padding-left:5px" href="/">Home</a>
  <a style="text-decoration:none;color:white;padding-left:5px" href="/user/logout">Logout</a>
    <div class="container-fluid" >
    
 <div class="row gy-2" style="padding: 1rem;">
   {{#each users}}
     <div class="col-12 col-md-4" style="border:1px solid white;border-radius:5px;">
         <h1 style="text-align: center;padding-top:2px">{{this.avatar}}<br>{{this.name}}</h1>
         <p style="text-align: justify;">{{this.bio}}</p>
         <a style="text-decoration: none;color:white" href="mailto:{{this.email}}">Contact me...</a>
     </div>
   {{/each}}
         
      
      
 </div>
 
    </div>

</main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

   
  </body>
